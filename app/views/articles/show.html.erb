<div class="row">
  <div class="col-sm-6">
<p>
  <strong>Title:</strong>

  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
  </div>
  <div class="col-sm-6">
 <%= image_tag @article.post_file.url(:thumb) if @article.post_file.url(:thumb).present? %>
  </div>
</div>
<hr>
<% if @article.pictures.present? %>
<div class="galleria">
<% @article.pictures.each do |art| %>
    <%= image_tag art.picture.url(:thumb) %>
<% end %>
</div>
  <% end %>
<h2>Comments</h2>
<%= render @article.comments %>
<% if  current_user.present? %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
  <%end %>
<%= form_with(model: [ @article, @article.pictures.build ], local: true,html: {multipart: true}) do |art| %>
  <%= art.file_field :picture %>
  <%= art.submit "wyslij image" %>
<% end %>

<% if @article.post_owner == current_user.email %>
<%= link_to 'Edit', edit_article_path(@article) %> |
  <%end %>
<%= link_to 'Back', articles_path %>